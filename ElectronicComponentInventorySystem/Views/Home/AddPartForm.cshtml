@model ElectronicComponentInventorySystem.UI.Models.ElectronicComponentsModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <br>
    <h3>Add Part</h3>
    <br />
</div>
@using (Html.BeginForm("ModifyViewData", "Home", FormMethod.Post))
{
    <div class="jumbotron">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Electronic Component:</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" required>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <input asp-for="Description" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Category" class="col-sm-2 col-form-label">Category:</label>
            <div class="col-sm-10">
                <select asp-for="Category" class="form-control">
                    <option value="" selected="selected"></option>
                    <option value="Active Components">Active Components</option>
                    <option value="Passive Components">Passive Components</option>
                    <option value="Electromechanical Parts">Electromechanical Parts</option>
                    <option value="Mechanical Parts">Mechanical Parts</option>
                    <option value="Cables">Cables</option>
                    <option value="Speakers and Buzzers">Speakers and Buzzers</option>
                    <option value="V Modules">V Modules</option>
                    <option value="W PC Accessories">W PC Accessories</option>
                    <option value="X PCB Material">X PCB Material</option>
                    <option value="Y Other Stuff">Y Other Stuff</option>
                    <option value="Z Cooking">Z Cooking</option>
                    <option value="Z Projects">Z Projects</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StorageLocation" class="col-sm-2 col-form-label">Storage Location:</label>
            <div class="col-sm-10">
                <select asp-for="StorageLocation" class="form-control">
                    <option value="" selected="selected"></option>
                    <option value="Box A">Box A</option>
                    <option value="Box B">Box B</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Footprint" class="col-sm-2 col-form-label">Footprint:</label>
            <div class="form-row">
                <div class="col">
                    <input asp-for="Footprint" class="form-check-input" type="radio" name="radioFootprint" value="option1" />
                    <label class="form-check-label" for="exampleRadios2">
                        None
                    </label>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input asp-for="Footprint" type="radio" aria-label="Radio button for following text input" name="radioFootprint" value="option0" />
                        </div>
                    </div>
                    <select asp-for="Footprint" class="col-7">
                        <option value="" selected="selected"></option>
                        <option value="THT">THT</option>
                        <option value="SMD">SMD</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StockLevel" class="col-sm-2 col-form-label">Stock Level:</label>
            <div class="col-sm-3">
                <input asp-for="StockLevel" type="number" min="0" max="100" class="form-control">
            </div>
            <label asp-for="StockUser" class="col-sm-2 col-form-label">Stock User:</label>
            <div class="col-sm-5">
                <input asp-for="StockUser" type="text" class="form-control" placeholder="admin">
            </div>
        </div>
    </div>
    <button input id="SaveButtonId" type="submit" class="btn btn-success">Save</button>
    <button input id="CancelButtonId" type="button" class="btn btn-outline-secondary">Cancel</button>
}
